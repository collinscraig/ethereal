---
title: Welcome to Middleman
---

<!-- Page Wrapper -->
    <div id="page-wrapper">

        <!-- Wrapper -->
        <div id="wrapper">

            <!-- Panel (Banner) -->
            <section class="panel banner right">
                <div class="content color0 span-3-75">
                    <div class="crest"><img src="<%= dato.homepage.crest.url %>" alt="<%= dato.homepage.crest.alt %>" /></div>
                    <h1 class="major"><%= dato.homepage.title %></h1>
                    <h2 class="major"><%= dato.homepage.subtitle %></h2>
                    <%= dato.homepage.description %>
                </div>
                <div class="image filtered span-1-75" data-position="25% 25%">
                    <img src="<%= dato.homepage.featured_image.url %>" />
                </div>
            </section>

            <% dato.homepage.players.each do |players| %>
                <!-- Panel (Spotlight) -->
                <section class="panel spotlight small right" id="first">
                    <div class="content span-7">
                        <h2 class="major"><%= players.player_name %></h2>
                        <p><%= players.player_position %></p>
                    </div>
                    <div class="image filtered tinted" data-position="top left">
                        <img src="<%= players.player_image.url %>" alt="<%= players.player_image.alt %>" />
                    </div>
                </section>
            <% end %>

            <!-- Copyright -->
            <div class="copyright">&copy; Craig Collins</div>
            
            

        </div>
    </div>